@page
@model OddyWeb.Pages.Categories.DeleteModel


<form method="post" >

    <input asp-for="Category.Id" hidden />

    <div class="border box-shadow rounded p-3 shadow-sm">
                
        <div class="form-group row pb-2">

            <h2 class="text-primary pl-3">Delete Category</h2>

        </div>
        <div class="row p-2">
            <div class="col-8">
                <div class="form-group row p-2">
                    <div class="col-4">
                        <label asp-for="Category.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />                        
                    </div>
                </div>
                <div class="form-group row p-2">
                    <div class="col-4">
                        <label asp-for="Category.DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.DisplayOrder" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row p-2">

                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-page="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                            </a>
                        </div>

                    </div>
                    
                </div>
            </div>

            <div class="col-4">
                @* Keep this empty *@
            </div>

        </div>

    </div>

</form>