@page
@model OddyWeb.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<partial name="_Notification" /> @*Partial view, added for notifications*@

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6 ">

            <h2 class="text-primary">Category List</h2>

        </div>

        <div class="col-6 text-end">

            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; New Category
            </a>

        </div>

    </div>

    <br /> <br />

    @if (Model.Categories.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.Categories)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-id="@obj.Id" asp-page="Edit" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a  asp-route-id="@obj.Id" asp-page="Delete" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Categories exists.</p>
    }
</div>

